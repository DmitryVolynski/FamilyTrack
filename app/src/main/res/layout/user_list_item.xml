<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="viewmodel"
            type="com.volynski.familytrack.viewmodels.UserListItemViewModel"/>
            <!--type="com.volynski.familytrack.viewmodels.UserListItemViewModel" /-->
    </data>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/list_item_height"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageview_userlistitem_photo"
            android:layout_gravity="center_vertical"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginLeft="16dp"
            android:transitionName="userPhoto"
            app:roundImageUrl="@{viewmodel.user.photoUrl}"
            app:srcCompat="@mipmap/ic_no_user_photo" />

        <LinearLayout
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="72dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textview_userlistitem_username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black"
                android:textSize="16sp"
                android:transitionName="userName"
                tools:text="Dmitry Volynski"
                android:text="@{viewmodel.user.displayName}" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                tools:text="Home"
                android:text="@{viewmodel.user.lastKnownLocation.knownLocationName}" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginEnd="72dp"
            android:layout_marginTop="20dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                tools:text="15min"
                android:text="@{viewmodel.user.lastKnownLocation.periodAsString}" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:text="Admin" />

        </LinearLayout>

        <ImageView
            android:id="@+id/imageview_userslistitem_popupsymbol"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginEnd="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="20dp"
            android:src="@drawable/ic_user_options" />
            <!--android:onClick="@{() -> viewmodel.showPopupMenu()}"-->
    </FrameLayout>
</layout>