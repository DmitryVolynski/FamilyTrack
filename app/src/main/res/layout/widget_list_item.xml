<?xml version="1.0" encoding="utf-8"?>
    <FrameLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="@dimen/list_item_height"
        android:background="@android:color/white"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageview_widgetlistitem_photo"
            android:layout_gravity="center_vertical"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginLeft="16dp"
            android:transitionName="userPhoto"
            android:background="@mipmap/ic_no_user_photo"/>

            <TextView
                android:id="@+id/textview_widgetlistitem_username"
                android:layout_marginLeft="72dp"
                android:layout_marginTop="16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black"
                android:textSize="16sp"
                android:transitionName="userName"
                tools:text="Dmitry Volynski"
                android:text="Dmitry Volynski" />

            <TextView
                android:id="@+id/textview_widgetlistitem_location"
                android:layout_marginStart="72dp"
                android:layout_marginTop="38dp"
                android:layout_marginEnd="32dp"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                tools:text="Home" />

            <TextView
                android:id="@+id/textview_widgetlistitem_time"
                android:layout_gravity="end"
                android:layout_marginEnd="32dp"
                android:layout_marginTop="16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                tools:text="15min"
                android:text="15min" />
    </FrameLayout>
